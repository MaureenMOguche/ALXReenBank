@using ReenBank.Models.ViewModels;
@model PersonAccountTransactionVM
@{
    ViewData["Title"] = "Deposit";
}
                                    
<form method="post" asp-action="Deposit">
<div class="dashboard">
        <div class="row g-0 height-100">
            <div class="col-lg-3 text-center">
                <div class="dashboard-left h-100 p-5">
                    <div class="profile-mini">
                        <img src="~/images/testimonial.jpg" alt="person" class="profile-image mb-3">
                        <h3>@Model.Person.FirstName @Model.Person.LastName</h3>
                    </div>
        
                    <div class="dashboard-nav mt-4">
                        <nav class="navbar navbar-expand-lg">
                            <div class="container">
                                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                                </button>
                                <div class="collapse navbar-collapse" id="navbarNav">
                                <ul class="navbar-nav flex-column">
                                    <li class="nav-item active">
                                        <a class="nav-link text-light d-flex" asp-action="Index">
                                            <i class="bi bi-gear me-4"></i>
                                            Dashboard
                                        </a>
                                    </li>
                                    <hr />

                                    <li class="nav-item">
                                        <a class="nav-link text-light d-flex" asp-action="Deposit">
                                            <i class="bi bi-book me-4"></i>
                                            Deposit Money
                                        </a>
                                    </li>
                        
                                    <li class="nav-item">
                                        <a class="nav-link text-light d-flex" asp-action="Transfer">
                                            <i class="bi bi-book me-4"></i>
                                            Transfer Money
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-light d-flex" asp-action="Transactions">
                                            <i class="bi bi-table me-4"></i>
                                            Account Statement
                                        </a>
                                    </li>

                                    <hr>

                                    <li class="nav-item">
                                        <a class="nav-link text-light d-flex" asp-action="Settings">
                                            <i class="bi bi-person-circle me-4"></i>
                                            Profile
                                        </a>
                                    </li>
                                </ul>
                                </div>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
            <div class="col-lg-9">
                
                <div class="row p-4">
                    <div class="col-lg">
                        <div class="cards">
                            <div class="card bg-light p-4 rounded-4 mb-4">
                                <h4 class="text-dark text-center">Reen Bank Plus (@Model.BankAccount.AccountNumber)</h4>
                                <hr class="darker-green-text w-75 m-auto mb-4 mt-2">
                                <div class="row">
                                    @*<img src="~/images/atmCard.png" alt="atm card" class="w-25">
                                    <div class="ms-3">
                                        <p class="text-dark mb-0">Balace:</p>
                                        <h3 class="fs-3 fw-bold darker-green-text">$@Model.BankAccount.Balance</h3>
                                    </div>*@
                                    <div class="col-8 m-auto pt-3 pb-5">
                                        <div class="row">
                                            <div class="col">
                                                <label class="form-label text-dark" asp-for="@Model.BankAccount.AccountNumber">Account Number</label>
                                                <input class="form-control" asp-for="@Model.BankAccount.AccountNumber" disabled/>
                                            </div>
                                            <div class="col">
                                                <label class="form-label text-dark">Account Name</label>
                                                <input class="form-control" value="@Model.Person.FirstName @Model.Person.LastName" disabled/>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div>
                                                <label class="form-label text-dark">Amount to Deposit</label>
                                                <input class="form-control" asp-for="@Model.AmountDeposit"/>
                                                <button type="submit" class="btn darker-grey-bg mt-3 text-light w-50">Deposit</button>
                                            </div>
                                        
                                        </div>
                                    </div>
                                </div>
                                
                            </div>
                            
                        </div>
                        <!-- <div class="transactions">
                            <h4>Transactions</h4>
                            <div class="card">

                            </div>
                        </div> -->
                    </div>
                </div>
            </div>
        </div>
    </div>
  </form>

